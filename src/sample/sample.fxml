<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.control.TextField?>


<?import javafx.scene.control.RadioButton?>



<GridPane fx:controller="sample.controller.Controller"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">
    <Pane fx:id="mainPane" prefHeight="700.0" prefWidth="600.0">
        <children>

            <Label fx:id="labelOfPrint" layoutX="10.0" layoutY="25.0" mnemonicParsing="false" text="Введите формулу для проверки:" />
            <TextField fx:id="formula" layoutX="200.0" layoutY="20.0" text="(A*B)"/>

            <Label fx:id="labelOfQuestion" layoutX="80.0" layoutY="60.0"  style="-fx-font-weight: bold" text="Является ли введенная формула СДНФ?"/>
            <Label fx:id="labelOfChoice" layoutX="130.0" layoutY="75.0"  style="-fx-font-weight: bold"  text="Сделайте свой выбор."/>


            <RadioButton fx:id="yesAnswer" layoutX="30" layoutY="110" style="-fx-font-style: italic" text="Формула является СДНФ"/>
            <RadioButton fx:id="noAnswer" layoutX="30" layoutY="130" style="-fx-font-style: italic" text="Формула не является СДНФ"/>

            <Button fx:id="choice" layoutX="280.0" layoutY="150.0" mnemonicParsing="false" text="Проверить" />


        </children></Pane>

</GridPane>